<Window x:Class="Group_2___StudyApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group_2___StudyApp"
        mc:Ignorable="d"
        Title="Login" Height="501" Width="500">
    <Grid>
        <!--Image-->
        <Image x:Name="imgPurpleFace" Source="purpleFace.jpg" Stretch="Fill" HorizontalAlignment="Center" Margin="150,30,150,250"/>
        <!--Labels-->
        <Label x:Name="lblId" Content="Student ID" HorizontalAlignment="Left" Margin="10,229,0,0" VerticalAlignment="Top" Width="93" Height="23"/>
        <Label x:Name="lblPass" Content="Password" HorizontalAlignment="Left" Margin="10,269,0,0" VerticalAlignment="Top" Width="93" Height="23"/>
        <!--Input Boxes-->
        <TextBox x:Name="tbxId" HorizontalAlignment="Left" Height="23" Margin="108,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="pbxPass" HorizontalAlignment="Left" Margin="108,269,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <!--Buttons-->
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="10,317,0,121" Width="472" RenderTransformOrigin="0.515,1.089" Click="BtnLogin_Click"/>
        <Button x:Name="btnSignUp" Content="Sign up" HorizontalAlignment="Left" Margin="10,354,0,84" Click="BtnSignUp_Click"/>
        <Button x:Name="btnResetPass" Content="Reset Password" HorizontalAlignment="Left" Margin="10,410,0,28"/>
    </Grid>
</Window>
