<Window x:Class="Group_2___StudyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group_2___StudyApp"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Main Page" Height="450" Width="800">
    <Grid x:Name="gridOverall">
        <Grid x:Name="gridTopBar" Height="50" VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                <materialDesign:PopupBox Margin="5">
                    <StackPanel>
                        <Button x:Name="btnSave" Content="Save"/>
                        <Button x:Name="btnPrint" Content="Print"/>
                        <Button x:Name="btnView" Content="View"/>
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>
        </Grid>
        <Grid x:Name="gridMain" RenderTransformOrigin="0.495,0.379">
            <!--Columns and Rows-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="153*"/>
                <RowDefinition Height="266*"/>
            </Grid.RowDefinitions>
            <!--Resources-->
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="36"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Top"/>
                </Style>
            </Grid.Resources>
            <!--Header-->
            <TextBlock Text="User" Grid.Row="0" Grid.Column="0" Margin="23,10,693,0" TextWrapping="Wrap" Height="48" Width="76"/>
            <!--X-->
            <Label x:Name="lblMajors" Content="Majors :" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Margin="23,115,0,0" VerticalAlignment="Top" Height="26" Width="52"/>
            <ComboBox x:Name="Mcombobox" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Margin="90,115,0,0" VerticalAlignment="Top" Width="17" SelectionChanged="Mcombobox_SelectionChanged" Height="28"/>
            <!--Datagrid-->
            <DataGrid x:Name="dataGrid" Grid.Row="1" Grid.Column="0" x:Uid="dataGrid" SelectionMode="Single" AutoGenerateColumns="False" Width="Auto" Margin="20 30" ItemsSource="{Binding}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Paper_Code}" Header="Paper Code" x:Name="paper_code" IsReadOnly="True" Width="120"/>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" x:Name="name" IsReadOnly="True" Width="230"/>
                    <DataGridTextColumn Binding="{Binding Year}" Header="Year" x:Name="year" IsReadOnly="True" Width="90"/>
                    <DataGridTextColumn Binding="{Binding Semester}" Header="Semester" x:Name="semester" IsReadOnly="True" Width="95"/>
                    <DataGridTextColumn Binding="{Binding PreRequisite}" Header="Pre-Requisite" x:Name="PreReq" IsReadOnly="True" Width="120"/>
                    
                    <DataGridTemplateColumn Header="Delete" Width="*" >
                        <DataGridTemplateColumn.CellTemplate >
                            <DataTemplate>
                                <Button x:Name="btnDelete" Content="X" Click="btnDelete" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
